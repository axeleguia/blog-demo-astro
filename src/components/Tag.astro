---
import { Icon } from "astro-icon";
const { tags } = Astro.props;
---

<div class="flex flex-wrap space-x-4 pb-1">
  {
    tags.map((tag) => (
      <p>
        <a
          href={`/tags/${tag}`}
          class="flex justify-between items-center space-x-1 text-blue-400 hover:text-blue-500 dark:text-orange-400 hover:dark:text-orange-500"
        >
          <Icon pack="mdi" name="tag" class="h-5 w-5" />
          <span> {tag}</span>
        </a>
      </p>
    ))
  }
</div>
