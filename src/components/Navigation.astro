---
const routes = [
    { path: "/", title: "Home" },
    { path: "/about/", title: "About" },
    { path: "/blog/", title: "Blog" },
    { path: "/tags/", title: "Tags" },
];
---

<div
    id="navBar"
    class="w-full mt-4 sm:flex sm:flex-row sm:space-x-4 divide-y divide-solid dark:divide-gray-700"
>
    {
        routes.map((route) => (
            <button class="w-full p-4 text-white font-semibold bg-blue-400 hover:bg-blue-500 dark:bg-orange-400 dark:hover:bg-orange-500">
                {route.title}
            </button>
        ))
    }
</div>
<script define:vars={{ routes }}>
    const buttons = document.querySelectorAll("button");
    buttons.forEach((button, index) => {
        button.addEventListener("click", () => {
            window.location.href = routes[index].path;
        });
    });
</script>
